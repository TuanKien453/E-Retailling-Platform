@{
    ViewData["Title"] = "CreateShop";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .input-group input {
            border: none !important;
            box-shadow: none !important;
        }

        .input-group-dynamic input {
            border: none !important;
            box-shadow: none !important;
        }

    </style>
    <link rel="stylesheet" href="/kit/css/material-kit.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body>
    <section>
        <div class="container py-4">
            <div class="row">
                <div class="col-lg-7 mx-auto d-flex justify-content-center flex-column">
                    <h3 class="text-center">Shop Registration</h3>
                    <h2></h2>
                    <form asp-action="CreateShopProcess" method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group input-group-dynamic mb-4 row">
                                        <div >
                                        <label for="name" class="form-label">Shop Name</label>
                                        <input class="form-control" id="name" name="name" maxlength="100" required aria-label="Shop Name..." type="text" value="@ViewBag.Shop?.name" />
                                        </div>
                                        <div >
                                        @if (ViewBag.ErrorName != null)
                                        {
                                            <p class="text-danger " style="margin-bottom : 10px">@ViewBag.ErrorName</p>
                                        }
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="col-md-6 ps-2">
                                    <div class="input-group input-group-dynamic">
                                        <label for="createdAt" class="form-label">Created At</label>
                                        <input class="form-control" type="text" id="createdAt" name="createdAt" aria-label="Created At..." readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <label for="province" class="form-label">Province</label>
                                </div>
                                <div class="col-sm-9">
                                    <select class="css_select" id="tinh" name="province" title="Chọn Tỉnh Thành">
                                        <option value="0">Tỉnh Thành</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <label for="district" class="form-label">District</label>
                                </div>
                                <div class="col-sm-9">
                                    <select class="css_select" id="quan" name="district" title="Chọn Quận Huyện">
                                        <option value="0">Quận Huyện</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <label for="commune" class="form-label">Commune</label>
                                </div>
                                <div class="col-sm-9">
                                    <select class="css_select" id="phuong" name="commune" title="Chọn Phường Xã">
                                        <option value="0">Phường Xã</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-4">
                                <div class="input-group input-group-dynamic">
                                    <label class="form-label" for="address">Address</label>
                                    <input class="form-control" type="text" id="address" name="address" maxlength="100" required value="@ViewBag.Shop?.address">
                                </div>
                            </div>
                            <div class="input-group mb-4 input-group-static">
                                <label for="shopDescription">Shop Description</label>
                                <textarea class="form-control" rows="4" type="text" id="shopDescription" name="shopDescription" maxlength="2000" required>@ViewBag.Shop?.shopDescription</textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" class="btn bg-gradient-dark w-100">Register</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script>
            document.getElementById('createdAt').value = new Date().toISOString().split('T')[0];
            $(document).ready(function () {
                // Lấy danh sách tỉnh thành
                $.ajax({
                    url: 'https://dev-online-gateway.ghn.vn/shiip/public-api/master-data/province',
                    type: 'GET',
                    headers: {
                        'Token': '38a65a5a-90f7-11ef-8e53-0a00184fe694' // Đảm bảo token là hợp lệ
                    },
                    success: function (data_tinh) {
                        console.log(data_tinh); // Xem dữ liệu trả về để kiểm tra cấu trúc
                        if (data_tinh.code === 200) { // Kiểm tra mã thành công
                            $.each(data_tinh.data, function (key_tinh, val_tinh) {
                                $("#tinh").append('<option value="' + val_tinh.ProvinceID + '">' + val_tinh.ProvinceName + '</option>');
                            });

                            // Xử lý sự kiện thay đổi tỉnh
                            $("#tinh").change(function () {
                                var idtinh = $(this).val();
                                $("#quan").html('<option value="0">Quận Huyện</option>');
                                $("#phuong").html('<option value="0">Phường Xã</option>');
                                $('#address').val(""); // Xóa trường địa chỉ

                                // Lấy danh sách quận huyện
                                $.ajax({
                                    url: 'https://dev-online-gateway.ghn.vn/shiip/public-api/master-data/district?province_id=' + idtinh,
                                    type: 'GET',
                                    headers: {
                                        'Token': '38a65a5a-90f7-11ef-8e53-0a00184fe694'
                                    },
                                    success: function (data_quan) {
                                        if (data_quan.code === 200) {
                                            $.each(data_quan.data, function (key_quan, val_quan) {
                                                $("#quan").append('<option value="' + val_quan.DistrictID + '">' + val_quan.DistrictName + '</option>');
                                            });
                                        }
                                    }
                                });
                            });

                            // Xử lý sự kiện thay đổi quận huyện
                            $("#quan").change(function () {
                                var idquan = $(this).val();
                                var selectedProvince = $("#tinh option:selected").text();
                                $("#phuong").html('<option value="0">Phường Xã</option>');
                                $('#address').val(selectedProvince); // Đặt địa chỉ chỉ bằng tên tỉnh

                                // Lấy danh sách phường xã
                                $.ajax({
                                    url: 'https://dev-online-gateway.ghn.vn/shiip/public-api/master-data/ward?district_id=' + idquan,
                                    type: 'GET',
                                    headers: {
                                        'Token': '38a65a5a-90f7-11ef-8e53-0a00184fe694'
                                    },
                                    success: function (data_phuong) {
                                        if (data_phuong.code === 200) {
                                            $.each(data_phuong.data, function (key_phuong, val_phuong) {
                                                $("#phuong").append('<option value="' + val_phuong.WardCode + '">' + val_phuong.WardName + '</option>');
                                            });
                                        }
                                    }
                                });
                            });

                            // Xử lý sự kiện thay đổi phường xã
                            $("#phuong").change(function () {
                                var selectedCommune = $("#phuong option:selected").text();
                                var selectedDistrict = $("#quan option:selected").text();
                                var selectedProvince = $("#tinh option:selected").text();
                                $('#address').val(selectedProvince + ', ' + selectedDistrict + ', ' + selectedCommune);
                            });
                        } else {
                            console.error("Lỗi khi lấy tỉnh thành:", data_tinh.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Có lỗi xảy ra:", error);
                        console.log("Mã trạng thái:", xhr.status); // Kiểm tra mã trạng thái
                    }
                });
            });
        </script>
        <script src="~/js/materialkitpro.js"></script>
        <script>
            window.addEventListener('load', function () {
                // Lấy tất cả các input có trong form
                const inputs = document.querySelectorAll('.input-group input');

                // Duyệt qua các input và kiểm tra xem có giá trị hay không
                inputs.forEach(function (input) {
                    if (input.value.trim() !== '') {
                        // Nếu có giá trị, thêm class 'is-filled' vào thẻ div cha của nó
                        input.closest('.input-group').classList.add('is-filled');
                    }

                    // Lắng nghe sự kiện input để thêm class khi người dùng nhập
                    input.addEventListener('input', function () {
                        if (input.value.trim() !== '') {
                            input.closest('.input-group').classList.add('is-filled');
                        } else {
                            input.closest('.input-group').classList.remove('is-filled');
                        }
                    });
                });
            });
        </script>
    </section>
</body>
</html>

