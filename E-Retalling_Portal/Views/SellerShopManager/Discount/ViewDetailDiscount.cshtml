@{
    ViewData["Title"] = "ViewDetailDiscount";
    Layout = "~/Views/Shared/ShopManagerSideBarLayout.cshtml";
}
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<div class="content m-4 pb-3">
    <div class="container-fluid ps-5">
        <div class="row pt-5 ">
            <h2 class="font-weight-bold">Discount Information</h2>
        </div>
        <form action="ViewDetailDiscount">
            <div class="row">
                <div class="col-6">
                    <h4 class="font-weight-bold mt-6">
                        Discount Name
                    </h4>
                    <input class="form-control" type="text" id="name" readonly name="name" value="@ViewBag.discount?.name">

                    <h4 class="font-weight-bold mt-6">
                        Start Date
                    </h4>
                    <input class="form-control" type="date" id="startDate" name="startDate" readonly value="@ViewBag.discount?.startDate">

                    
                </div>

                <div class="col-6">
                    
                    <h4 class="font-weight-bold mt-6">
                        Value(%)
                    </h4>
                    <input id="value" class="form-control" type="number" name="value" readonly value="@ViewBag.discount?.value">

                    <h4 class="font-weight-bold mt-6">
                        End Date
                    </h4>
                    <input class="form-control" type="date" id="endDate" name="endDate" readonly value="@ViewBag.discount?.endDate">

                </div>
            </div>
        </form>

        <form action="ViewProductOnDiscount">
            <div class="row">
                <div class="col-12 d-flex justify-content-end mt-4">
                    <button type="submit" class="next-btn btn btn-dark btn-pill text-uppercase mb-2">
                        &nbsp;&nbsp;Back&nbsp;&nbsp;
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

