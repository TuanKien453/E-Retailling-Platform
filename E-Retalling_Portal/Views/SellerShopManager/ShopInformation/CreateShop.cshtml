@{
    ViewData["Title"] = "CreateShop";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .input-group input {
            border: none !important;
            box-shadow: none !important;
        }

        .input-group-dynamic input {
            border: none !important;
            box-shadow: none !important;
        }

    </style>
    <link rel="stylesheet" href="/kit/css/material-kit.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>
<body>
    <section>
        <div class="container py-4">
            <div class="row">
                <div class="col-lg-7 mx-auto d-flex justify-content-center flex-column">
                    <h3 class="text-center">Shop Registration</h3>
                    <h2></h2>
                    <form asp-action="CreateShopProcess" method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group input-group-dynamic mb-4 row">
                                        <div >
                                        <label for="name" class="form-label">Shop Name</label>
                                        <input class="form-control" id="name" name="name" maxlength="100" required aria-label="Shop Name..." type="text" value="@ViewBag.Shop?.name" />
                                        </div>
                                        <div >
                                        @if (ViewBag.ErrorName != null)
                                        {
                                            <p class="text-danger " style="margin-bottom : 10px">@ViewBag.ErrorName</p>
                                        }
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="col-md-6 ps-2">
                                    <div class="input-group input-group-dynamic">
                                        <label for="createdAt" class="form-label">Created At</label>
                                        <input class="form-control" type="text" id="createdAt" name="createdAt" aria-label="Created At..." readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-4">
                                <div class="input-group input-group-dynamic">
                                    <label class="form-label" for="address">Address</label>
                                    <input class="form-control" type="text" id="address" name="address" maxlength="100" required value="@ViewBag.Shop?.address">
                                </div>
                            </div>
                            <div class="input-group mb-4 input-group-static">
                                <label for="shopDescription">Shop Description</label>
                                <textarea class="form-control" rows="4" type="text" id="shopDescription" name="shopDescription" maxlength="2000" required>@ViewBag.Shop?.shopDescription</textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" class="btn bg-gradient-dark w-100">Register</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script>
            document.getElementById('createdAt').value = new Date().toISOString().split('T')[0];
        </script>
        <script src="~/js/materialkitpro.js"></script>
        <script>
            window.addEventListener('load', function () {
                // Lấy tất cả các input có trong form
                const inputs = document.querySelectorAll('.input-group input');

                // Duyệt qua các input và kiểm tra xem có giá trị hay không
                inputs.forEach(function (input) {
                    if (input.value.trim() !== '') {
                        // Nếu có giá trị, thêm class 'is-filled' vào thẻ div cha của nó
                        input.closest('.input-group').classList.add('is-filled');
                    }

                    // Lắng nghe sự kiện input để thêm class khi người dùng nhập
                    input.addEventListener('input', function () {
                        if (input.value.trim() !== '') {
                            input.closest('.input-group').classList.add('is-filled');
                        } else {
                            input.closest('.input-group').classList.remove('is-filled');
                        }
                    });
                });
            });
        </script>
    </section>
</body>
</html>

