@{
    Layout = "~/Views/Shared/ShopManagerSideBarLayout.cshtml";
}
<style id="select">
    .year-selecter {
        margin: 20px auto;
        display: flex;
        justify-content: center;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
<style>
    .row-img{
        width:80px;
        height:80px;
    }
</style>
<div class="content m-4 pb-3">
    <div class="row p-4">
        <div class="col-12">
            
                <h2 style="text-align: center; font-weight: bold">
                    Shop Profit Overview
                </h2>
            <div id="select" class="year-selecter">
                <label style="display: block; text-align: center;" for="yearDropdown">Select Year:</label>
                <select id="yearDropdown" onchange="updateChartAndTable()">
                    @foreach (int item in ViewBag.years)
                    {
                        <option value="@item">@item</option>
                    }
                    <!-- Add more years as needed -->
                </select>
            </div>
           

            <div>
                <canvas id="salesChart" width="400" height="200"></canvas>
            </div>

            <div>
                <table id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>Profit</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <!-- Rows will be populated by JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    let salesChart;

    // Function to initialize or update the chart
    function initChart(labels, sales) {
        const ctx = document.getElementById('salesChart').getContext('2d');

        if (salesChart) {
            salesChart.destroy();
        }

        salesChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Profit',
                        data: sales,
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderWidth: 2,
                        tension: 0.4
                    },
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Values (VND)'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Months'
                        }
                    }
                }
            }
        });
    }

    // Function to update the chart and table
    function updateChartAndTable() {
        const yearString = document.getElementById('yearDropdown').value;

        fetch(`/ShopChart/LoadChartData?yearString=${yearString}`)
            .then(response => response.json())
            .then(data => {

                const { labels, sales} = data;

                // Populate the table
                const tableBody = document.getElementById('tableBody');
                tableBody.innerHTML = ''; // Clear existing table rows

                for (let i = 0; i < labels.length; i++) {
                    const row = `<tr>
                            <td>${labels[i]}</td>
                            <td>${sales[i].toFixed(2)}</td>
                        </tr>`;
                    tableBody.innerHTML += row;
                }

                // Update the chart
                initChart(labels, sales);
            })
            .catch(error => console.error('Error loading chart data:', error));
    }

    // Initialize the chart and table on page load
    document.addEventListener('DOMContentLoaded', () => {
        updateChartAndTable();
    });

</script>

<script>

    $(document).ready(function () {
        $('#myTable').DataTable({
            paging: false,
            layout: false
        });
    });
</script>

