@{
    Layout = "~/Views/Shared/ShopManagerSideBarLayout.cshtml";
}
<style id="select">
    .year-selecter {
        margin: 20px auto;
        display: flex;
        justify-content: center;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="content m-4 pb-3">
    <div class="row p-4">
        <div class="col-12">
            
                <h2 style="text-align: center; font-weight: bold">
                    Shop Sales Chart
                </h2>
            <div id="select" class="year-selecter">
                <label style="display: block; text-align: center;" for="yearDropdown">Select Year:</label>
                <select id="yearDropdown" onchange="updateChart()">
                    @foreach (int item in ViewBag.years)
                    {
                        <option value="@item">@item</option>
                    }
                    <!-- Add more years as needed -->
                </select>
            </div>
           

            <div>
                <canvas id="salesChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
    let salesChart;

    // Initialize or update the chart
    function initChart(labels, sales, others, averages) {
        const ctx = document.getElementById('salesChart').getContext('2d');

        // If the chart already exists, destroy it before creating a new one
        if (salesChart) {
            salesChart.destroy();
        }

        salesChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Sales',
                        data: sales,
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Transaction Fee',
                        data: others,
                        borderColor: 'rgba(255, 99, 132, 1)',
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Averages Order',
                        data: averages,
                        borderColor: 'rgba(54, 162, 235, 1)',
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Values'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Months'
                        }
                    }
                }
            }
        });
    }

    // Fetch data and update chart based on selected year
    function updateChart() {
        const yearString = document.getElementById('yearDropdown').value;

        fetch(`/ShopChart/LoadChartData?yearString=${yearString}`)
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    console.error('Error loading chart data:', data.error);
                    alert(data.error);
                    return;
                }

                const { labels, sales, others, averages } = data;
                initChart(labels, sales, others, averages);
            })
            .catch(error => console.error('Error loading chart data:', error));
    }

    // Initialize the chart on page load with the selected year
    document.addEventListener('DOMContentLoaded', () => {
        updateChart();
    });
</script>



