@{
    Layout = "~/Views/Shared/ShopManagerSideBarLayout.cshtml";
    var chartData = ViewData["ChartData"] as Dictionary<string, double>;
    var selectedYear = ViewData["SelectedYear"];
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="content m-4 pb-3">
    <div class="row p-4">
        <div class="col-12">
            <label for="yearSelect">Select Year:</label>
            <select id="yearSelect" onchange="changeYear()">
                @if (selectedYear.Equals(2023))
                {
                    <option value="2023" selected="selected">2023</option>
                }
                else
                {
                    <option value="2023">2023</option>
                }
                @if (selectedYear.Equals(2024))
                {
                    <option value="2024" selected="selected">2024</option>
                }
                else
                {
                    <option value="2024">2024</option>
                }
                @if (selectedYear.Equals(2025))
                {
                    <option value="2025" selected="selected">2025</option>
                }
                else
                {
                    <option value="2025">2025</option>
                }
            </select>

            <div class="row">
                <div class="col-12">
                    <canvas id="salesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Parse data from ViewData
    const chartData = @Html.Raw(Json.Serialize(chartData));
    const year = @selectedYear;
    console.log(chartData); // Check data structure and values
    // Initial chart render
    renderChart(chartData, year);

    // Render chart
    function renderChart(data, year) {
        const labels = Object.keys(data);
        const salesData = Object.values(data);



        const ctx = document.getElementById('salesChart').getContext('2d');
        window.salesChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: `Sales for ${year}`,
                    data: salesData,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

    // Year change handler to reload page with selected year
    function changeYear() {
        const selectedYear = document.getElementById('yearSelect').value;
        window.location.href = `@Url.Action("ViewShopChart", "ShopChart")?year=${selectedYear}`;
    }
</script>


