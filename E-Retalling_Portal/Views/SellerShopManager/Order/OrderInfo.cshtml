@{
    ViewData["Title"] = "Order Information";
    Layout = "~/Views/Shared/ShopManagerSideBarLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<div class="content m-4 pb-3">

    <div class="row p-4">
        <div class="col-12" style="overflow-x: auto;">
            <table id="myTable" class="display" style="width: 100%; table-layout: fixed;">
                <thead>
                    <tr>
                        <th>OrderCode</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>TransactionFee</th>
                        <th>ShippingFee</th>
                        <th>Price</th>
                        <th>Content</th>
                        <th>Create At</th>
                        <th>Finish At</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.OrderInfo)
                    {
                        <tr>
                            <td>@item.OrderCode</td>
                            <td>@item.ToName</td>
                            <td>@item.ToPhone</td>
                            <td>@item.ToAddress</td>
                            <td>@item.TransactionFee</td>
                            <td>@item.ShippingFee</td>
                            <td>@item.Price</td>
                            <td>@item.Content</td>
                            <td>@item.CreateDate</td>
                            @if (item.FinishDate != null)
                            {
                                <td>@item.FinishDate</td>
                            }
                            else
                            {
                                <td>Null</td>
                            }
                            <td>@item.ShippingStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    function sendDataToModal(id) {
        $('#delete-product-id').val(id);
    }

    $(document).ready(function () {
        $('#myTable').DataTable({
            lengthMenu: [[5, 10, 15], [5, 10, 15]]
        });
    });
</script>
