@{
    ViewData["Title"] = "ViewDetailSaleProduct";
    Layout = "~/Views/Shared/ShopManagerSideBarLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
<style>
    .row-img{
        width:80px;
        height:80px;
    }
</style>
<div class="content m-4 pb-3">

    <div class="row p-4">
        <div class="col-12">
            <div class="d-flex justify-content-between mb-3">
                <button type="button" class="btn btn-dark btn-pill text-uppercase" onclick="location.href='@Url.Action("Index","ShopDashBoard")'">
                    Back to DashBoard
                </button>
                </div>
            <table id="myTable" class="display">
                <thead>
                    <tr>
                        <th style="width: 10%;">Cover Image</th>
                        <th style="width: 25%;">Name</th>
                        <th style="width: 15%;">Category</th>
                        <th style="width: 10%;">Weight</th>
                        <th style="width: 10%;">Price</th>
                        <th style="width: 10%;">Quantity</th>
                        <th style="width: 20%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.products)
                    {
                        <tr>
                            <td><img class="row-img" src="~/productImages/@item.coverImage.imageName" /></td>
                            <td>@item.name</td>
                            <td>@item.category.name</td>
                            <td>@item.weight</td>
                            @if (item.isVariation == true)
                            {
                                <td class="font-weight-bold text-xs" style="color:gray;">N/A</td>
                            }
                            else
                            {
                                <td>@item.price</td>
                            }
                            @if (item.isVariation == true)
                            {
                                <td class="font-weight-bold text-xs" style="color:gray;">N/A</td>
                            }
                            else
                            {
                                <td>@item.quantity</td>
                            }
                            <td>
                                <a href="DetailProductProcess?productId=@item.id" class="text-primary font-weight-bold text-xs">
                                    See detail
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
<script>
    $(document).ready(function () {
        $(document).ready(function () {
            $('#myTable').DataTable({
                lengthMenu: [[5, 10, 15], [5, 10, 15]]
            });
        });
    });
</script>
