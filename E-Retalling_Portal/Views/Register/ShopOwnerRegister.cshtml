
@{
    ViewData["Title"] = "ShopOwnerRegister";
    Layout = null;
}
<link rel="stylesheet" href="~/kit/css/material-kit.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<section>
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0 mt-sm-8 mt-7 mb-3">
                    <div class="card-header text-center pt-4 pb-1">
                        <h4 class="font-weight-bolder mb-1">Seller Sign Up</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="ShopOwnerRegisterCheck" method="post">
                                          
                            <!-- Username Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input style="width:100%;" type="text" id="username" name="username" class="form-control" required value="@ViewBag.Username" />
                                @if (ViewBag.ErrorUsername != null)
                                {
                                    <p class="text-danger">@ViewBag.ErrorUsername</p>
                                }
                            </div>

                            <!-- Password Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" id="password" name="password" class="form-control " required />
                            </div>

                            <!-- Confirm Password Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label for="passwordConfirm" class="form-label">PasswordConfirm</label>
                                <input style="width:100%;"  type="password" id="passwordConfirm" name="passwordConfirm" class="form-control @(ViewBag.ErrorPasswordConfirm != null ? "is-invalid" : "")" required />
                                @if (ViewBag.ErrorPasswordConfirm != null)
                                {
                                    <p class="text-danger">@ViewBag.ErrorPasswordConfirm</p>
                                }
                            </div>
                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Sign up</button>
                            </div>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/js/materialkitpro.js"></script>
<script>
    window.addEventListener('load', function () {
        // Lấy tất cả các input có trong form
        const inputs = document.querySelectorAll('.input-group input');

        // Duyệt qua các input và kiểm tra xem có giá trị hay không
        inputs.forEach(function (input) {
            if (input.value.trim() !== '') {
                // Nếu có giá trị, thêm class 'is-filled' vào thẻ div cha của nó
                input.closest('.input-group').classList.add('is-filled');
            }

            // Lắng nghe sự kiện input để thêm class khi người dùng nhập
            input.addEventListener('input', function () {
                if (input.value.trim() !== '') {
                    input.closest('.input-group').classList.add('is-filled');
                } else {
                    input.closest('.input-group').classList.remove('is-filled');
                }
            });
        });
    });
</script>
    
