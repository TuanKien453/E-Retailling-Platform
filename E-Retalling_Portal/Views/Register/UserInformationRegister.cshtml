@{
    ViewData["Title"] = "UserInformationRegister";
    Layout = null;
}

<link rel="stylesheet" href="~/kit/css/material-kit.css"/>
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<section>
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0 mt-sm-8 mt-7 mb-3">
                    <div class="card-header text-center pt-4 pb-1">
                        <h4 class="font-weight-bolder mb-1">Information Sign Up</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="UserInformationRegisterCheck" method="post">
                            <!-- Display Name Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label" for="displayName">Display Name</label>
                                <input type="text" class="form-control"
                                       id="displayName" name="displayName" required maxlength="100" value="@ViewBag.DisplayName" />
                            </div>
                            <!-- First Name Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label" for="firstName">First Name</label>
                                <input type="text" class="form-control"
                                       id="firstName" name="firstName" required maxlength="100" value="@ViewBag.FirstName" />
                            </div>
                            <!-- Last Name Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label" for="lastName">Last Name</label>
                                <input type="text" class="form-control"
                                       id="lastName" name="lastName" required maxlength="100" value="@ViewBag.LastName" />
                            </div>
                            <!-- Birthday Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label for="birthday" class="form-label">Birthday</label>
                                <input type="date" class="form-control" value="1999-10-10"
                                       id="birthday" name="birthday" placeholder="s" required value="@ViewBag.Birthday" />
                            </div>    
                            
                            
                            <div class="input-group input-group-outline mb-3">
                                <select class="form-control" id="tinh" name="province" title="Chọn Tỉnh Thành">
                                    <option value="0">Tỉnh Thành</option>
                                </select>
                            </div>
                            <div class="input-group input-group-outline mb-3">
                                <select class="form-control" id="quan" name="district" title="Chọn Quận Huyện">
                                    <option value="0">Quận Huyện</option>
                                </select>
                            </div>
                            <div class="input-group input-group-outline mb-3">
                                <select class="form-control" id="phuong" name="commune" title="Chọn Phường Xã">
                                    <option value="0">Phường Xã</option>
                                </select>
                            </div>
                            <!-- Address Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label for="address" class="form-label">Address Detail</label>
                                <input type="text" class="form-control" id="address" name="address" required maxlength="100" value="@ViewBag.Address" />
                            </div>

                            <!-- Gender Radio -->
                            <div class="input-group input-group-outline mb-3">
                                <h6 class="mb-2 pb-1">Gender: </h6>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="femaleGender" value="female"
                                    @(ViewBag.Gender == "female" ? "checked" : "") />
                                    <label class="form-check-label" for="femaleGender">Female</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="maleGender" value="male" checked
                                    @(ViewBag.Gender == "male" ? "checked" : "") />
                                    <label class="form-check-label" for="maleGender">Male</label>
                                </div>
                            </div>
                            <!-- Username Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input style="width:100%;" type="text" id="username" name="username" class="form-control" required maxlength="100" value="@ViewBag.Username" />
                                @if (ViewBag.ErrorUsername != null)
                                {
                                    <p class="text-danger">@ViewBag.ErrorUsername</p>
                                }
                            </div>

                            <!-- Password Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" id="password" name="password" class="form-control " maxlength="100" required />
                            </div>

                            <!-- Confirm Password Field -->
                            <div class="input-group input-group-outline mb-3">
                                <label for="passwordConfirm" class="form-label">PasswordConfirm</label>
                                <input style="width:100%;" type="password" id="passwordConfirm" name="passwordConfirm" class="form-control @(ViewBag.ErrorPasswordConfirm != null ? "is-invalid" : "")" maxlength="100" required />
                                @if (ViewBag.ErrorPasswordConfirm != null)
                                {
                                    <p class="text-danger">@ViewBag.ErrorPasswordConfirm</p>
                                }
                            </div>
                            <!-- Terms Checkbox -->
                            <div class="form-check form-check-info text-left">
                                <input class="form-check-input" type="checkbox" value id="flexCheckDefault" checked>
                                <label class="form-check-label" for="flexCheckDefault">
                                    I agree to the <a href="../../pages/privacy.html" class="text-dark font-weight-bolder">Terms and Conditions</a>
                                </label>
                            </div>
                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Sign up</button>
                            </div>    
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/materialkitpro.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    window.addEventListener('load', function () {
        // Lấy tất cả các input có trong form
        const inputs = document.querySelectorAll('.input-group input');

        // Duyệt qua các input và kiểm tra xem có giá trị hay không
        inputs.forEach(function (input) {
            if (input.value.trim() !== '') {
                // Nếu có giá trị, thêm class 'is-filled' vào thẻ div cha của nó
                input.closest('.input-group').classList.add('is-filled');
            }

            // Lắng nghe sự kiện input để thêm class khi người dùng nhập
            input.addEventListener('input', function () {
                if (input.value.trim() !== '') {
                    input.closest('.input-group').classList.add('is-filled');
                } else {
                    input.closest('.input-group').classList.remove('is-filled');
                }
            });
        });
    });
    $(document).ready(function () {
            // Lấy danh sách tỉnh thành
            $.ajax({
                url: 'https://dev-online-gateway.ghn.vn/shiip/public-api/master-data/province',
                type: 'GET',
                headers: {
                    'Token': '38a65a5a-90f7-11ef-8e53-0a00184fe694' // Đảm bảo token là hợp lệ
                },
                success: function (data_tinh) {
                    console.log(data_tinh); // Xem dữ liệu trả về để kiểm tra cấu trúc
                    if (data_tinh.code === 200) { // Kiểm tra mã thành công
                        $.each(data_tinh.data, function (key_tinh, val_tinh) {
                            $("#tinh").append('<option value="' + val_tinh.ProvinceID + '">' + val_tinh.ProvinceName + '</option>');
                        });

                        // Xử lý sự kiện thay đổi tỉnh
                        $("#tinh").change(function () {
                            var idtinh = $(this).val();
                            $("#quan").html('<option value="0">Quận Huyện</option>');
                            $("#phuong").html('<option value="0">Phường Xã</option>');
                            $('#address').val(""); // Xóa trường địa chỉ

                            // Lấy danh sách quận huyện
                            $.ajax({
                                url: 'https://dev-online-gateway.ghn.vn/shiip/public-api/master-data/district?province_id=' + idtinh,
                                type: 'GET',
                                headers: {
                                    'Token': '38a65a5a-90f7-11ef-8e53-0a00184fe694'
                                },
                                success: function (data_quan) {
                                    if (data_quan.code === 200) {
                                        $.each(data_quan.data, function (key_quan, val_quan) {
                                            $("#quan").append('<option value="' + val_quan.DistrictID + '">' + val_quan.DistrictName + '</option>');
                                        });
                                    }
                                }
                            });
                        });

                        // Xử lý sự kiện thay đổi quận huyện
                        $("#quan").change(function () {
                            var idquan = $(this).val();
                            var selectedProvince = $("#tinh option:selected").text();
                            $("#phuong").html('<option value="0">Phường Xã</option>');
                            $('#address').val(selectedProvince); // Đặt địa chỉ chỉ bằng tên tỉnh

                            // Lấy danh sách phường xã
                            $.ajax({
                                url: 'https://dev-online-gateway.ghn.vn/shiip/public-api/master-data/ward?district_id=' + idquan,
                                type: 'GET',
                                headers: {
                                    'Token': '38a65a5a-90f7-11ef-8e53-0a00184fe694'
                                },
                                success: function (data_phuong) {
                                    if (data_phuong.code === 200) {
                                        $.each(data_phuong.data, function (key_phuong, val_phuong) {
                                            $("#phuong").append('<option value="' + val_phuong.WardCode + '">' + val_phuong.WardName + '</option>');
                                        });
                                    }
                                }
                            });
                        });

                        // Xử lý sự kiện thay đổi phường xã
                        $("#phuong").change(function () {
                            var selectedCommune = $("#phuong option:selected").text();
                            var selectedDistrict = $("#quan option:selected").text();
                            var selectedProvince = $("#tinh option:selected").text();
                            $('#address').val(selectedProvince + ', ' + selectedDistrict + ', ' + selectedCommune);
                        });
                    } else {
                        console.error("Lỗi khi lấy tỉnh thành:", data_tinh.message);
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Có lỗi xảy ra:", error);
                    console.log("Mã trạng thái:", xhr.status); // Kiểm tra mã trạng thái
                }
            });
        });

</script>