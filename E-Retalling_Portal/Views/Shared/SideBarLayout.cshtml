<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/kit/css/theme.css" />
    <link rel="stylesheet" href="~/css/sideBar.css" />
    <link rel="stylesheet" href="~/css/pagination.css" />
    <script src="https://kit.fontawesome.com/710667f71a.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-2 sidebar">


                <div class="flex-shrink-0">
                    <h3 class="fs-5 fw-semibold sidebar-title p-3">Account</h3>
                    <ul class="list-unstyled ps-0">
                        <li class="mb-1 single-item active">
                                
                                <button class="btn btn-toggle align-items-center rounded collapsed no-shadow text-white  ">
                                <i class="fa-solid fa-table-columns">&nbsp;</i>
                                    <a href="#">DashBoard</a>
                                </button>
                        </li>

                        <li class="mb-1">
                            <div class="sidebar-parent">
                                
                                <button class="btn btn-toggle align-items-center rounded collapsed no-shadow text-white" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="false">
                                    <i class="fa-solid fa-table-columns">&nbsp;</i>
                                    Home
                                    <i class="fa-solid fa-chevron-down dropdown-icon"></i>
                                </button>
                            </div>
                            <div class="collapse" id="home-collapse" style="">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-2 small">
                                    <li class="active"><a href="#" class="">Overview</a></li>
                                    <li><a href="#" class="">Updates</a></li>
                                    <li><a href="#" class="">Reports</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="mb-1">
                            <div class="sidebar-parent">
                                
                                <button class="btn btn-toggle align-items-center rounded collapsed no-shadow text-white" data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
                                    <i class="fa-solid fa-house">&nbsp;</i>
                                    Dashboard
                                    <i class="fa-solid fa-chevron-down dropdown-icon"></i>
                                </button>
                            </div>
                            <div class="collapse" id="dashboard-collapse" style="">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-2 small">
                                    <li><a href="#" class="">Overview</a></li>
                                    <li><a href="#" class="">Weekly</a></li>
                                    <li><a href="#" class="">Monthly</a></li>
                                    <li><a href="#" class="">Annually</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>


                </div>


            </div>
            <div class="col-10 left-col">


                @RenderBody()

            </div>
        </div>
    </div>
    <script>
        document.querySelectorAll('.btn-toggle').forEach(btn => {
            btn.addEventListener('click', () => {
                btn.querySelector('.fa-chevron-down').classList.toggle('collapsed');
            });
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
