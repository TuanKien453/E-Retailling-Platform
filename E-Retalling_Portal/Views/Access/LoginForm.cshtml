@{
	Layout = null;
}

@model Account;
<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Sign in your account</title>
	<!-- plugins:css -->
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
	<section class="vh-100" style="background-color: #508bfc;">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-12 col-md-8 col-lg-6 col-xl-5">
					<div class="card shadow-2-strong" style="border-radius: 1rem;">
						<div class="card-body p-5 text-center">

							<h3 class="mb-5">Sign in</h3>
							<form asp-action="Login" asp-controller="Access" method="post">
								<input type="hidden" name="roleId" value="1" />
								<div data-mdb-input-init class="form-outline mb-4">
									<input type="text" id="username" name="Username" class="form-control form-control-lg" />
									<label class="form-label" for="username">Username</label>
								</div>

								<div data-mdb-input-init class="form-outline mb-4">
									<input type="password" id="password" name="Password" class="form-control form-control-lg" />
									<label class="form-label" for="password">Password</label>
								</div>
								<!-- Checkbox -->
								<!-- Checkbox "Remember password" -->
								<div class="form-check d-flex justify-content-start mb-4">
									<input class="form-check-input" type="checkbox" name="RememberMe" id="form1Example3" />
									<label class="form-check-label" for="form1Example3"> Remember password </label>
								</div>
								@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
								{
									<div class="alert alert-danger mt-3" role="alert">
										@ViewBag.ErrorMessage
									</div>
								}
								<button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

							</form>

							<hr class="my-4">

							<form asp-controller="Access" asp-action="ExternalGoogleLogin">

								<button data-mdb-button-init data-mdb-ripple-init class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;" type="submit">
									<i class="fab fa-google me-2"></i> Sign in with Google
								</button>
							</form>
							<form asp-controller="Access" asp-action="ExternalFacebookLogin">
								<button data-mdb-button-init data-mdb-ripple-init class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
										type="submit">
									<i class="fab fa-facebook-f me-2"></i>Sign in with facebook
								</button>
							</form>
							<form asp-controller="Account" asp-action="NormalRegister">
								<p>Don't have an account yet?</p>
								<button type="submit" class="btn btn-primary">Registry</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.js"></script>
</body>
</html>
